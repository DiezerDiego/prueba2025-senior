{
  "name": "diego/prueba2025-senior",
  "description": "Inventory reservation system with asynchronous confirmation",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "guzzlehttp/guzzle": "^7.8",
    "nikic/fast-route": "^1.3",
    "monolog/monolog": "^3.0",
    "vlucas/phpdotenv": "^5.6",
    "robmorgan/phinx": "^0.13"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "testcontainers/testcontainers": "^1.0"
  },

  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite unit",
    "migrate": "phinx migrate",
    "seed": "phinx seed:run",
    "lint": "php -l src"
  },

  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "php-http/discovery": true
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
